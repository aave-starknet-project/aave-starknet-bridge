{
  "name": "aave-starknet-phase1",
  "version": "0.0.0",
  "description": "Bridging staticATokens to Starknet to allow for cheap reward collection and token transfer.",
  "main": "index.js",
  "scripts": {
    "test": "hardhat --network localhost test",
    "deploy:account": "yarn hardhat starknet-deploy-account --starknet-network devnet --wallet OpenZeppelin",
    "compile": "hardhat starknet-compile",
    "compile:starkgate": "hardhat starknet-compile --cairo-path 'starkgate-contracts/src' starkgate-contracts",
    "compile:fossil": "hardhat starknet-compile node_modules/@joriksch/fossil/contracts --cairo-path node_modules/@joriksch/fossil/contracts"
  },
  "author": "AAVE",
  "license": "Apache-2.0",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@shardlabs/starknet-hardhat-plugin": "^0.5.1",
    "@types/chai": "^4.2.22",
    "@types/elliptic": "^6.4.14",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "chai": "^4.3.4",
    "ethers": "^5.4.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@joriksch/fossil": "^0.0.1",
    "@joriksch/sg-contracts": "^0.0.2",
    "@openzeppelin/contracts": "^4.5.0",
    "@toruslabs/starkware-crypto": "^1.0.0",
    "hardhat": "2.9.0"
  }
}
