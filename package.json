{
  "name": "aave-starknet-phase1",
  "version": "0.0.0",
  "description": "Bridging staticATokens to Starknet to allow for cheap reward collection and token transfer.",
  "main": "index.js",
  "scripts": {
    "source": "source .env/*",
    "test": "hardhat --network localhost test",
    "testnet:l2": ".venv/bin/starknet-devnet --host 0.0.0.0 --lite-mode",
    "testnet:l1": "yarn ganache --fork https://eth-mainnet.alchemyapi.io/v2/$ALCHEMY_KEY@$BLOCK_NUMBER --gasPrice 2000000000000 -u $DAI_WHALE -u $USDC_WHALE -u $STKAAVE_WHALE",
    "lint": "find contracts/ -iname *.cairo -exec .venv/bin/cairo-format -c {} +",
    "compile": "hardhat starknet-compile --cairo-path 'node_modules/@joriksch/oz-cairo/src:contracts/src/starknet'",
    "compile:tests": "hardhat starknet-compile --cairo-path 'node_modules/@joriksch/oz-cairo:contracts/src/starknet' contracts/test",
    "deploy:account": "yarn hardhat starknet-deploy-account --starknet-network devnet --wallet OpenZeppelin",
    "compile:openzeppelin": "yarn hardhat starknet-compile node_modules/@joriksch/oz-cairo --cairo-path node_modules/@joriksch/oz-cairo/",
    "prepare": "husky install"
  },
  "author": "AAVE",
  "license": "Apache-2.0",
  "dependencies": {
    "@joriksch/oz-cairo": "^1.0.1",
    "@joriksch/sg-contracts": "^0.0.2",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "@shardlabs/starknet-hardhat-plugin": "^0.5.3",
    "@swp0x0/protocol-v2": "^1.0.4",
    "@toruslabs/starkware-crypto": "^1.0.0",
    "@types/chai": "^4.2.22",
    "@types/elliptic": "^6.4.14",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "chai": "^4.3.4",
    "chai-bignumber": "^3.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.4.6",
    "ganache": "^7.0.5",
    "git-format-staged": "^3.0.0",
    "hardhat": "2.9.3",
    "husky": "^7.0.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "husky": {
    "hooks": {}
  }
}
